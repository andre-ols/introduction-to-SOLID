                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    },
                    "example": {
                      "id": "61ab6979-9ab4-4fa2-b979-ac94d3ba1e1e",
                      "name": "User name sample",
                      "email": "example@example.com",
                      "admin": false,
                      "created_at": "2022-01-01T00:00:00.000Z",
                      "updated_at": "2022-01-01T00:00:00.000Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
